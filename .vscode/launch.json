    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach To npm",
            "type": "node",
            "request": "attach",
            "port": 5050,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null,
            "file": "/home/eltonbautista/the_odin_project/odin-battleship/dist/index.html"
        },
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "file": "/home/eltonbautista/the_odin_project/odin-battleship/dist/index.html"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://127.0.0.1:5500/dist/index.html",
            "webRoot": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/index.js",
            // "file": "/home/eltonbautista/the_odin_project/odin-battleship/dist/index.html",
      "outputCapture": "std",
      "console": "integratedTerminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "url": "http://localhost:5500",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
      "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js",
            "file": "/home/eltonbautista/the_odin_project/odin-battleship/dist/index.html",
      "outputCapture": "std",
      "console": "integratedTerminal"
        }
    ]
}